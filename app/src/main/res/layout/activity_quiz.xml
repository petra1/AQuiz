<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".QuizActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:accessibilityHeading="true"
            android:gravity="center_horizontal"
            android:text="@string/title_questions"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <!-- New TextView for the progress text -->
        <TextView
            android:id="@+id/tv_question_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Question 1 of 8" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" 
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="25sp">

            <TextView
                android:id="@+id/tv_question_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:accessibilityLiveRegion="polite"
                android:gravity="center_horizontal"
                tools:text="For what stands WCAG? "
                android:textColor="@color/gradient_start_green"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <RadioGroup
            android:id="@+id/rg_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb_answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                tools:text="Web Content Accessibility Guidelines"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:buttonTint="@color/white" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb_answer_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                tools:text="Web Content Accessibility Guidelines"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:buttonTint="@color/white" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb_answer_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                tools:text="Web Content Accessibility Guidelines"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:buttonTint="@color/white" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rb_answer_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                tools:text="Web Content Accessibility Guidelines"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:buttonTint="@color/white" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:text="@string/button_submit"
            android:textColor="@color/gradient_start_green"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</layout>